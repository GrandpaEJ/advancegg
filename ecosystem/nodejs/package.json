{
  "name": "advancegg",
  "version": "1.0.0",
  "description": "High-performance 2D graphics library for Node.js - no Go compiler required",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "test": "node test/test.js",
    "example": "node examples/basic-drawing.js",
    "benchmark": "node scripts/benchmark.js",
    "info": "node scripts/info.js"
  },
  "keywords": [
    "graphics",
    "2d",
    "canvas",
    "drawing",
    "visualization",
    "charts",
    "image-processing",
    "webassembly",
    "wasm",
    "golang",
    "performance"
  ],
  "author": "AdvanceGG Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrandpaEJ/advancegg.git",
    "directory": "ecosystem/nodejs"
  },
  "bugs": {
    "url": "https://github.com/GrandpaEJ/advancegg/issues"
  },
  "homepage": "https://github.com/GrandpaEJ/advancegg#readme",
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "nodemon": "^3.0.1",
    "@types/node": "^24.1.0",
    "jest": "^29.0.0"
  },
  "optionalDependencies": {
    "fs-extra": "^11.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "native/",
    "scripts/",
    "examples/",
    "README.md"
  ],
  "bin": {
    "advancegg-info": "./scripts/info.js",
    "advancegg-benchmark": "./scripts/benchmark.js"
  },
  "browser": {
    "fs": false,
    "path": false
  }
}
